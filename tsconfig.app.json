{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*.ts",
		"src/**/*.vue",
		"src/**/tsconfig.json",
	],
	"exclude": [
		"src/**/__tests__/*",
	],
	"compilerOptions": {
		"lib": [
			"dom",
			"es2021"
		],
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*",
			],
		},
	},
}
